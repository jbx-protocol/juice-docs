{
  "version": 2,
  "builds": [
    {
      "src": "api/mcp/[...path].js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/mcp/(.*)",
      "dest": "/api/mcp/[...path]"
    },
    {
      "src": "/api/mcp",
      "dest": "/api/mcp/[...path]"
    }
  ],
  "functions": {
    "api/mcp/[...path].js": {
      "maxDuration": 30,
      "memory": 1024
    }
  }
}
